@model ASP.NET_Core_MVC.Models.ViewModels.AddBlogPostRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add Blog Posts</h1>
    </div>
</div>
<div class="container">
    <form method="post">
        <div class="mb-3">
            <label for="heading" class="form-label">Heading</label>
            <input type="text" class="form-control" id="heading" asp-for="Heading">
        </div>
        <div class="mb-3">
            <label for="pageTitle" class="form-label">Page Title</label>
            <input type="text" class="form-control" id="pageTitle" asp-for="PageTitle">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea type="text" class="form-control" id="content" asp-for="Content"></textarea>
        </div>
        <div class="mb-3">
            <label for="shortDescription" class="form-label">Short Description</label>
            <input type="text" class="form-control" id="shortDescription" asp-for="ShortDescription">
        </div>
        <div class="mb-3">
            <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
            <input type="text" class="form-control" id="featuredImageUrl" asp-for="FeaturedImageUrl">
        </div>
        <div class="mb-3">
            <label for="urlHandle" class="form-label">Url Handle</label>
            <input type="text" class="form-control" id="urlHandle" asp-for="UrlHandle">
        </div>
        <div class="mb-3">
            <label for="publishedDate" class="form-label">Published Date</label>
            <input type="date" class="form-control" id="publishedDate" asp-for="PublishedDate">
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <input type="text" class="form-control" id="author" asp-for="Author">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="isVisible" asp-for="Visible">
            <label for="isVisible" class="form-check-label" >Is Visible</label>
        </div>
        <div class="mb-3">
            <label for="selecttags" class="form-label">Tags</label>
            <select for="selecttags" class="form-select" asp-items=@Model.Tags asp-for="SelectedTags"></select>
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
</div>
