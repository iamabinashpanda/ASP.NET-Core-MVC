@model ASP.NET_Core_MVC.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<form method="post">
    <div class="mb-3">
        <label for="id" class="form-label">ID</label>
        <input type="text" class="form-control" id="id" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="displayName" class="form-label">Display Name</label>
        <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
    </div>
    <button type="submit" class="btn btn-dark">Update</button>
    <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminTags" asp-action="Delete">Delete</button>
</form>